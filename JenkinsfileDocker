pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo '$PATH'
                echo 'Hello ..'
		        sh 'ls'
                sh 'python --version'
                echo 'Building..'

            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'python3 app.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh 'python3 app.py'
            }
        }
    }
}